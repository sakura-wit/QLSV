<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8EDAE6"
    android:orientation="vertical"
    android:rotationX="0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/teal_200"
            android:rotationX="8"
            android:text="Thông Tin Cá Nhân"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#0A22A8"
            android:textSize="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#25A5DF"
        android:orientation="horizontal"
        android:rotationX="-8">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:rotationX="-15"
            app:srcCompat="@drawable/icon9" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/btn_star_big_on" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtIname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:rotationX="-20"
            android:textAlignment="center"

            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#79BADA"
        android:orientation="vertical"
        android:rotationX="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:rotationX="-13">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="35dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:rotationX="-13"
                app:srcCompat="@drawable/chikhoa" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="Username:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edtIusername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:rotationX="-13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="9dp"
            android:orientation="horizontal"
            android:rotationX="-13">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="35dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:rotationX="-13"
                app:srcCompat="@drawable/chikhoa" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="Address:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edtIaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPostalAddress"
                android:rotationX="-13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="7dp"
            android:orientation="horizontal"
            android:rotationX="-13">

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="35dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:rotationX="-13"
                app:srcCompat="@drawable/chikhoa" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="Phone: "
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edtIphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="phone"
                android:rotationX="-13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="6dp"
            android:orientation="horizontal"
            android:rotationX="-13">

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="35dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:rotationX="-13"
                app:srcCompat="@drawable/chikhoa" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="Password:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edtIpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPassword"
                android:rotationX="-13" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>